{
  "name": "label-backend-server",
  "version": "1.0.0",
  "description": "Backend server for Label application with PostgreSQL",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && node scripts/postbuild.js",
    "start": "node dist/index.js",
    "postinstall": "prisma generate",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:postgres": "docker-compose up -d postgres",
    "docker:backend": "docker-compose up -d backend",
    "docker:rebuild": "docker-compose up -d --build",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "setup": "npm install && docker-compose up -d postgres && npm run db:push",
    "setup:full": "npm install && docker-compose up -d --build",
    "dev:local": "docker-compose up -d postgres && npm run dev",
    "dev:docker": "docker-compose up -d",
    "health": "curl -s http://localhost:3001/health | jq || curl -s http://localhost:3001/health",
    "logs": "docker-compose logs -f backend",
    "logs:db": "docker-compose logs -f postgres",
    "reset:db": "docker-compose down && docker volume rm label_backend_server_postgres_data 2>/dev/null || true && docker-compose up -d postgres",
    "lint": "eslint src/**/*.ts",
    "supabase:switch": "./scripts/switch-to-supabase.sh",
    "local:switch": "./scripts/switch-to-local.sh",
    "dev:supabase": "npm run dev",
    "vercel:build": "prisma generate && tsc",
    "vercel:deploy": "vercel --prod",
    "deploy:vercel": "npm run vercel:build && vercel --prod",
    "deploy:setup": "./scripts/deploy-vercel.sh"
  },
  "dependencies": {
    "@prisma/client": "^5.15.0",
    "@supabase/supabase-js": "^2.53.0",
    "@types/multer": "^2.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.6.1",
    "joi": "^17.13.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "redis": "^5.6.1",
    "sharp": "^0.34.3",
    "tsx": "^4.15.1",
    "typescript": "^5.4.5",
    "zod": "^4.0.13"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "@vercel/node": "^5.3.6",
    "eslint": "^8.57.0",
    "prisma": "^5.15.0"
  },
  "keywords": [
    "backend",
    "express",
    "postgresql",
    "docker",
    "typescript",
    "prisma"
  ],
  "author": "",
  "license": "ISC"
}
